<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="Swaggy Netty" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid Margin="0" Height="419.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Game_title" Height="2*"/>
            <RowDefinition x:Name="Username_label" Height="30"/>
            <RowDefinition x:Name="Username_entry" Height="40"/>
            <RowDefinition x:Name="Password_label" Height="30"/>
            <RowDefinition x:Name="Password_entry" Height="40"/>
            <RowDefinition x:Name="Remember_username_tick" Height="25"/>
            <RowDefinition x:Name="Remember_password_tick" Height="25"/>
            <RowDefinition x:Name="Login_button" Height="40"/>
            <RowDefinition x:Name="Progresss_bar" Height="40"/>
            <RowDefinition x:Name="Spacing" Height="*"/>
        </Grid.RowDefinitions>


        <Label Content="Username" Margin="5,0" VerticalContentAlignment="Bottom" UseLayoutRounding="False" Grid.Row="1" Padding="0"/>
        <Button Content="Login" Margin="5" Grid.Row="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFF0F0F0"/>
        <Label Content="Password" Margin="5,0" VerticalContentAlignment="Bottom" UseLayoutRounding="False" Grid.Row="3" Padding="0"/>
        <TextBlock TextWrapping="Wrap" Margin="5" Grid.Row="4" Text="Enter password" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
        <Label Content="Swaggy Netty" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" UseLayoutRounding="True" Padding="6,5,5,5" Grid.ColumnSpan="2" FontSize="30" FontFamily="Segoe UI Historic"/>
        <TextBox Grid.ColumnSpan="2" Margin="5,5,5,10" Grid.Row="2" TextWrapping="Wrap" VerticalContentAlignment="Center" Padding="5"/>
        <PasswordBox Grid.ColumnSpan="2" Margin="5,5,5,10" Grid.Row="4" VerticalContentAlignment="Center" Padding="5"/>
        <CheckBox Content="Remember username" Margin="5,0" Grid.Row="5" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <CheckBox Content="Remember password" Margin="5,0" Grid.Row="6" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Forgot your password?" Margin="5,0" VerticalContentAlignment="Bottom" UseLayoutRounding="False" Grid.Row="3" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Grid.Column="1" Background="{x:Null}"/>
        <Label Content="or create an account" Margin="5" VerticalContentAlignment="Center" UseLayoutRounding="False" Grid.Row="7" Padding="0" FontSize="10" Grid.Column="1" Background="{x:Null}"/>
        <ProgressBar Margin="5" VerticalContentAlignment="Center" Grid.Row="8" Grid.ColumnSpan="3"/>
        <Button Content="Play" Margin="5" Grid.Row="8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFF0F0F0" Grid.Column="3"/>
        <Image Grid.RowSpan="4" Grid.Column="2" Margin="0" Grid.Row="1" Grid.ColumnSpan="2" Source="https://i.imgur.com/W3VTSSj.jpg"/>
    </Grid>
</Window>
